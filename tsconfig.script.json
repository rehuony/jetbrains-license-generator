{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["ES2022"],
    "rootDir": "./scripts",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "strict": true,
    "outDir": "./build",
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true
  },
  "include": ["scripts"]
}
